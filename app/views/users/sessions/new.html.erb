<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <div class="search-box">
        <h3><h2>Log in</h2></h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'loginForm'} ) do |f| %>
          <div class="input-group">
          <% flash.each do |key, value| %>          
          <div><%= value %></div>         
          <% end %>
            <%= devise_error_messages! %>
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Enter Your Email" %>
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Enter Your Password" %>
            
            <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            <% end -%>
            
            <%= f.submit "Log in", :class => "form-control", style: 'border-bottom-left-radius: 3; border-top-left-radius: 3;'%>
          </div>
        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>